<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>resetPassword</title>


<link href="public/css/bootstrap.min.css" rel="stylesheet">
<script src="public/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="/css/resetpassword.css">

</head>
<body>
    <div class="column">
        <div class="card">
          <div class="card-header">
            Forgot Password
          </div>
          <div class="card-body">
            <form action="/api/users/resetpassword" method="post">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" class="form-input" id="email" required>
              </div>
              <div class="form-group">
                <label for="newpsswd">New Password</label>
                <input type="password" class="form-input" name="newPassword" placeholder="New Password" id="newpsswd" required>
              </div>
              <div class="form-group">
                <label for="confirm">Confirm Password</label>
                <input type="password" class="form-input" name="confirmPassword" placeholder="Confirm Password" id="confirmPasswd" required>
              </div>
              <br>
              <button type="submit" class="btn-primary btn-block">Reset Password</button>
            </form>
            
          </div>
        </div>
      </div>
    	<!-- popper-->
<script src="js/popper.min.js"  type="text/javascript"></script>
<!-- jQuery -->
<script src="js/jquery.min.js"  type="text/javascript"></script>

<!-- Bootstrap JS -->
<script src="js/bootstrap.bundle.min.js"  type="text/javascript"></script>
</body>
</html>